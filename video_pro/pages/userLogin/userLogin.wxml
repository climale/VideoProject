<view>
  <view class="login-icon">
  <image class="login-img" src="../../res/images/login.jpg"></image>
  </view>
  <view class="login-from"> 
    <form bindsubmit="doLogin">
      <view class="inputView">
        <image class="nameImage" src="../../res/images/username.png"></image>
        <label class="loginLabel">账号</label>
        <input name="username" class="inputText" placeholder="请输入账号" value="w" ></input>
      </view>
        <view class="inputView">
        <image class="keyImage" src="../../res/images/username.png"></image>
        <label class="loginLabel">密码</label>
        <input name="password" class="inputText" password="true" placeholder="请输入密码" value="w"></input>
      </view>
        <view >
           <button class="loginBtn" type="primary" form-type="submit">登陆</button>
       </view>

    </form>

  </view>
</view>